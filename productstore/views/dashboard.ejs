<h1 class="mt-4 " style="text-align:center;">Products</h1>
<h2 style="line-height: 0.1em; border-bottom: 1px solid #000;"></h2>
<div class="lead mb-3" style="position: relative; float: right;"><%= user.name %>
    <i class="fa fa-shopping-cart" style="position: relative; float: right;"></i>
    <a href="/users/logout" class="mt-5 1em;" style="position: relative; float: right;" class="btn btn-secondary">Logout</a>

</div>

<div class="row mt-5">

        <form action="/users/Products" method="POST">
                <% data.products.forEach(function(item)
                {%>  
                        <div class="form-group" style="font-size: 2vw; margin: 20px 0; border: 1px solid">
                                <input type="hidden" id="prod" name="<%=item.Name %>" value="<%=item.Name %>"
                                />
                                <img src="<%=item.Image %>" width="100" height="100">
                                <input type="text" id="price" name="price" style="border: none;
                                border-color: transparent;"value="<%=item.Price %>"/>
                                <button name="button" onclick="this.form.submit()" > Add to Cart</button>   
                        </div>
                    <%});
                %>
         </form>


</div>
